{
  "name": "epubizon",
  "version": "1.0.0",
  "description": "A modern EPUB and PDF reader with AI-powered summaries",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-features=VizDisplayCompositor",
    "dev": "electron . --dev --no-sandbox --disable-features=VizDisplayCompositor",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "node clean.js",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "reset": "npm run clean:all"
  },
  "keywords": [
    "electron",
    "epub",
    "pdf",
    "reader",
    "openai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "epubjs": "^0.3.93",
    "jszip": "^3.10.1",
    "openai": "^4.28.0",
    "pdfjs-dist": "^4.0.379"
  },
  "build": {
    "appId": "com.epubizon.app",
    "productName": "Epubizon",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
